<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

     	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" 
	        android:layout_weight="3">
		        <Button
		            android:id="@+id/btn_menu"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
            		android:drawableLeft="@drawable/main_setting_down" />
		</LinearLayout>
		
     	<Button
            android:id="@+id/btn_bookadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/main_new_book_down" />
        <Button
            android:id="@+id/btn_friendadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/main_friends_list_down" />
    </LinearLayout>
	
	<com.example.locking.MyGallery
		android:id="@+id/Gallery01"
		android:listSelector="@drawable/list_selector"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
	
	<TextView
	    android:id="@+id/tv_update"
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="UPDATE"/>
	
</LinearLayout>
